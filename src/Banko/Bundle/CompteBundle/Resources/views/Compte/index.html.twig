{% extends "BankoCompteBundle::layout.html.twig" %}
 
{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block banko_body %}
 
  <h2>Liste des comptes</h2>
 
  <table style="width: 500px;" class="table table-hover table-bordered table-condensed">
    <thead>
        <tr >
            <th style="text-align: center;">Nom</th>
            <th style="text-align: center;">Solde Courant</th>
            <th style="text-align: center;">Solde Pr√©visionnel</th>
        </tr>
    </thead>
    {% for compte in liste_comptes %}
      <tr>
        <td style="width: 100px;"><a href="{{ path('banko_voir', {'id': compte.id, 'page': 1}) }}">{{ compte.nom }}</a></td>
        <td style="width: 200px;text-align: center;"><a href="{{ path('banko_voir', {'id': compte.id, 'page': 1}) }}">{{ solde_courant[compte.id] }}</a></td>
        <td style="width: 200px;text-align: center;"><a href="{{ path('banko_voir', {'id': compte.id, 'page': 1}) }}">{{ solde_previsionnel[compte.id] }}</a></td>
      </tr>
    {% else %}
      <tr>Pas (encore !) de compte</tr>
    {% endfor %}
  </table>
  <table align="center">
    {{ render(controller('BankoCompteBundle:Compte:stats')) }}
  </table>
{% endblock %}